<!-- res/drawable/custom_seekbar_progress.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Remove the background shape -->
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="5dp"/>
                <solid android:color="#FF0000"/> <!-- Progress color of the SeekBar -->
                <stroke android:width="8dp" android:color="#FF0000"/> <!-- Adjust the stroke width -->
            </shape>
        </clip>
    </item>
</layer-list>
